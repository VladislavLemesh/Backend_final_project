<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
	<header>
        {% block header %}
	{% if is_granted('IS_AUTHENTICATED_FULLY') %}
		         <nav>
                <ul>
                    <li><a href="{{ path('home_page') }}">Главная</a></li>
                    <li><a href="{{ path('show_videos') }}">Мои видео</a></li>
                    <li><a href="{{ path('show_categories') }}">Мои категории</a></li>

                </ul>
            </nav>

		<button class="green"><a href="{{ path('app_logout') }}">Выйти</a></button>
	{% else %}
		 <button class="green"><a href="{{ path('app_login') }}">Войти</a></button>
		<button class="green"><a href="{{ path('app_register') }}">Регистрация</a></button>
	{% endif %}
	{% endblock %}
	</header>
	<div class="center_block_main">

                <aside>
                {% block sidebar %}
                {% endblock %}
                </aside>
                <main>
                {% block main_cont %}
                {% endblock %}
                </main>
        </div>

    </body>
</html>
